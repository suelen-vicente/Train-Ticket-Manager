<Window x:Class="TrainManager_Suelen_Vicente.SaveNewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainManager_Suelen_Vicente"
        mc:Ignorable="d"
        Title="Save New File" Height="100" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Width="500">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblFileName" Content="File Name:" Width="70"/>
                <TextBox x:Name="txtFileName" TextWrapping="Wrap" Width="400" Height="20" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnCancel" Content="Cancel" Width="145" Margin="10" Click="btnCancel_Click"/>
                <Button x:Name="btnSaveFile" Content="Save File" Width="145" Margin="10" Click="btnSaveNewFile_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
